<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ópio</title>
    <link rel="icon" href="~/img/logobranca.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Banda.NetApp.styles.css" asp-append-version="true" />


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fancyapps/ui@5.0/dist/fancybox/fancybox.css" />
</head>
<body>

    <header>
        @* Navbar *@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom mb-3 navbarCustom">
            <div class="container-fluid">
                <!-- Logo -->
                <div class="logoDiv" asp-area="" asp-controller="Home" asp-action="Index">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"></a>
                </div>

                <!-- Toggle btn -->
                <button class="navbar-toggler custom-toggler" type="button" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar Content -->
                <div class="navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link nav-linkCustom" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-linkCustom" asp-area="" asp-controller="Videos" asp-action="Videos">Videos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-linkCustom" asp-area="" asp-controller="Pictures" asp-action="Pictures">Fotos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-linkCustom" asp-area="" asp-controller="Story" asp-action="Story">História</a>
                        </li>
                        @* <li class="nav-item">
                            <a class="nav-link nav-linkCustom" asp-area="" asp-controller="Products" asp-action="Products">Produtos</a>
                        </li> *@
                        
                    </ul>
                </div>
            </div>
        </nav>

    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="Footer" class="col-12 text-center d-flex">
        <div class="container-fluid">
            <div class="justify-content-center align-items-center">
                <a href="https://open.spotify.com/intl-pt/artist/3TFDfV2km0JB0KRWyEXW5a?go=1&sp_cid=1494ab4d0c4d39e75ef31340e358b7cc&utm_source=embed_player_p&utm_medium=desktop&nd=1&dlsi=7085b034a1864c21" target="_blank"><i class="fa-brands fa-spotify"></i></a>
                <a href="https://www.youtube.com/%40bandaopio" target="_blank"><i class="fa-brands fa-youtube"></i></a>
                <a href="https://www.instagram.com/banda.opio/" target="_blank"><i class="fa-brands fa-instagram icon-reflex"></i></a>
            </div>
            <div>
                <ul class="d-flex justify-content-center align-items-center">
                    <li class="">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="">
                        <a asp-area="" asp-controller="Videos" asp-action="Videos">Videos</a>
                    </li>
                    @* <li class="">
                        <a asp-area="" asp-controller="Products" asp-action="Products">Produtos</a>
                    </li> *@
                    <li class="">
                        <a asp-area="" asp-controller="" asp-action="">Fotos</a>
                    </li>
                </ul>
            </div>
            <div class="row footerCopyright">
                <p>&copy; 2024 - Banda Øpio - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
            </div>
        </div>
    </footer>

    <div class="shadowOverlay"></div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@fancyapps/ui@5.0/dist/fancybox/fancybox.umd.js"></script>
    <script async src="//www.instagram.com/embed.js"></script>
    
    <script>
    var tag = document.createElement('script');

    tag.src = "https://www.youtube.com/iframe_api";
    var firstScriptTag = document.getElementsByTagName('script')[0];
    firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);
    </script>

    @*Email js*@
    <script src="~/js/emailFunction.js"></script>
    <script src="https://cdn.emailjs.com/dist/email.min.js"></script>
    <script type="text/javascript"src="https://cdn.jsdelivr.net/npm/@@emailjs/browser@4/dist/email.min.js"></script>
    <script type="text/javascript">
        (function () {
            emailjs.init({
                publicKey: "Ys9BaxOv2MlpTKY8P",
            });
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
