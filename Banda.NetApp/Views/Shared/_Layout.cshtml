<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ópio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Banda.NetApp.styles.css" asp-append-version="true" />
</head>
<body>
    
    <header>
        @* Navbar *@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom mb-3 navbarCustom">
            <div class="container-fluid">
                <!-- Logo -->
                <div class="logoDiv" asp-area="" asp-controller="Home" asp-action="Index">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"></a>
                </div>

                <!-- Toggle btn -->
                <button onclick="blurMenuDrop()" class="navbar-toggler custom-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="custom-toggler">MENU</span>
                </button>

                <!-- Navbar Content -->
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link navbarCustomLinks" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link navbarCustomLinks" asp-area="" asp-controller="Home" asp-action="Videos">Videos</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="overlay">
        <div class="container-fluid container-renderbody">
            <main role="main" class="pb-3">
            
                @RenderBody()
            </main>
        </div>
    </div>
        <footer class="">
            <div class="container">
                &copy; 2024 - Banda Ópio - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

        <div class="shadowOverlay"></div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
