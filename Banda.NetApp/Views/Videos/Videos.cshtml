@{
    ViewData["Title"] = "Videos";
}

<div class="overlay">
    <section id="Videos" class="col-12">
        <div class="container-fluid">
            <div class="row">
                <h1>Em construção!</h1>
            </div>

            <div class="row toggleFilter">
                <div class="col-4 justify-content-center">
                    <button class="icon-button">
                        <p>Todos</p>
                    </button>
                </div>

                <div class="col-4 justify-content-center">
                    <button class="icon-button">
                        <i class="fa-brands fa-youtube"></i>
                    </button>
                </div>

                <div class="col-4 justify-content-center align-center">
                    <button class="icon-button">
                        <i class="fa-brands fa-instagram"></i>
                    </button>
                </div>
            </div>


            <h1 id="channel-id"></h1>

            <div id="channel-info">Loading channel information...</div>
            <div id="channel-videos">Loading videos...</div>
            <button id="load-more" style="display:none;">Load More Videos</button>

        </div>

    </section>
</div>


<script src="~/js/videos.js"></script>